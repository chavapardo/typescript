{
  "compilerOptions": {
    "target": "ESNext", // Target moderno
    "module": "ESNext", // Usar módulos ESNext
    "jsx": "react-jsx", // Soporte para JSX
    "esModuleInterop": true, // Permitir importaciones como React
    "strict": true, // Opcional: Habilitar comprobaciones estrictas
    "moduleResolution": "Node", // Resolver módulos como Node.js
    "skipLibCheck": true, // Ignorar chequeo de tipos en node_modules
    "forceConsistentCasingInFileNames": true, // Forzar consistencia en nombres de archivo
    "baseUrl": ".", // Base para rutas relativas
    "paths": {
      "@/*": ["src/*"] // Alias para rutas absolutas
    }
  },
  "include": ["src"], // Archivos incluidos
  "exclude": ["node_modules", "dist"] // Archivos excluidos
}